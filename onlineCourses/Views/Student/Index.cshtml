@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
<br />


@if (Model.Count() > 0)
{

    <table class="table table-bordered table-striped  table-hover mt-3 text-center">
        <tr class="bg-black text-light">
            <td>@Html.DisplayNameFor(d=>d.Name)</td>
            <td>@Html.DisplayNameFor(e=>e.Age)</td>
            <td>@Html.DisplayNameFor(e=>e.Address)</td>
            <td>@Html.DisplayNameFor(d=>d.PhoneNumber)</td>
            <td>
                @Html.DisplayNameFor(d=>d.ImageURL)
            </td>
            <td>@Html.DisplayNameFor(d=>d.Email)</td>
            <td>Details</td>




        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td> @item.Name</td>
                <td> @item.Age </td>
                <td> @item.Address </td>
                <td> @item.PhoneNumber </td>
                <td> <img src="~/Images/IMG-20210728-WA0112.jpg" class="img-fluid rounded " width="30" height="30" alt="Student images" /> </td>
                <td> @item.Email</td>
                <td>
                    <a class="btn btn-success" asp-area="" asp-controller="Student" asp-action="Details" asp-route-Name="@User.Identity.Name">
                        Details
                        <i class="fas fa-eye"> </i> Detail
                    </a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="m-3 alert-warning ">
        <h2>No Employees  less ! </h2>
    </div>
}

